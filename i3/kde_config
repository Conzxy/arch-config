exec_always --no-startup-id  $HOME/.config/polybar/mylaunch.sh

set $Locker i3lock -i /home/conzxy/Pictures/shinku/lock_pic.png -e -f -t && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"
# 避免有的keyboard layout没有Pause键
bindsym $mod+Shift+p mode "$mode_system"


bindsym $mod+Ctrl+greater move workspace to output right
bindsym $mod+Ctrl+less move workspace to output left

set $left_monitor eDP-1
set $right_monitor HDMI-1

set $monitor_control Monitor Control: (1) HDMI ON, (2) HDMI OFF, (3) eDP ON, (4) eDP OFF
mode "$monitor_control" {
  bindsym 1 exec --no-startup-id xrandr --auto --output $right_monitor --auto --right-of $left_monitor, mode "default"
  bindsym 2 exec --no-startup-id xrandr --output $right_monitor --off, mode "default"
  bindsym 3 exec --no-startup-id xrandr --auto --output $left_monitor --auto --left-of $right_monitor, mode "default"
  bindsym 4 exec --no-startup-id xrandr --output $left_monitor --off, mode "default"
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

for_window [title="st$"] floating enable;
for_window [title="alacritty$"] floating enable;

bindsym $mod+m mode "$monitor_control"

